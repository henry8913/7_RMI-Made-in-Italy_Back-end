# Environment Variables Configuration File for RMI Made in Italy Backend

# MongoDB
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>
appName=RMIMadeinItaly

# Server Config
PORT=2025
BACKEND_URL=http://localhost:2025
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your_jwt_secret_key
SALT_ROUNDS=10
SESSION_SECRET=your_session_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:2025/api/auth/google/callback

# Admin
ADMIN_SECRET_KEY=segreto-mio-solo

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Imposta a true per attivare la modalit√† demo (nessuna transazione reale)
STRIPE_DEMO_MODE=true

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret